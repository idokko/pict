<div class="comment-new-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-center">Add Comment</h1>
                <%= form_for [@topic, @comment] do |c| %>
                    <div class="comment-group">
                        <%= c.label "コメント"%>
                        <%= c.text_area :body, class: 'commment-control' %>
                    </div>
                    <%= c.submit '投稿', class: 'btn btn-black btn-block' %>
                <% end %>
            </div>
        </div>
    </div>
</div>